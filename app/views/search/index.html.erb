<div class="background_wrapper_1">
  
  <div class="row">
    <h2>
      <% if user_signed_in? %>
        Welcome back, <%= current_user.name.split(" ").first %>!
      <% else %>
        Please sign in or sign up!
      <% end %>
    </h2>
  </div>

  <div class="row">
    <h3>Try a Search!</h3>
  </div>

  <div class="search_form">

    <%= form_tag("/results", method: "get") do %>

      <%= label_tag(:q_name, "Search Artists and Venues by Name:") %>
      <%= text_field_tag(:q_name) %>

      <%= submit_tag("Search!", class: "button") %>
    <% end %>

  </div>
  
  <div class="search_form">

    <%= form_tag("/results", method: "get") do %>
      
      <%= label_tag(:q_zip_code, "Search Events and Venues by Zip Code:") %>
      <%= text_field_tag(:q_zip_code) %>

      <%= submit_tag("Search!", class: "button") %>
    <% end %>

  </div>

</div>

<div class="background_parallax"></div>

<div class="background_wrapper_2">

  <div class="app_info row">
    <h3>Learn More</h3>
    <p>Have you been to shy to go to a concert alone?  Well now you don't have to be!</p>
    <p>With Show UP! &trade; you can meet before the show!</p>
  </div>

</div>



