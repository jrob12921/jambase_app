<div class="event_bg_container">
  <div class="row">
    <div class="small-12 columns">
      <h2>Congrats!  You're seeing:</h2>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= @artist_names.join(", ") %>
      <span> @ </span>
      <%= @event_venue['Name'] %>
      <span> on </span>
      <%= DateTime.parse(@event_date).strftime("%-m/%-d/%y") %>

    </div>
  </div>

  <div class="row">
    <div class="small-8 columns">
      <%= @event_venue['Address'] %><br><%= @event_venue['City'] %>, <%= @event_venue['StateCode'] %> <%= @event_venue['ZipCode'] %>
    </div>

    <div class="small-4 columns">
      <%= link_to("Google Maps", "http://maps.google.com/?q=@event_venue['Address'] %>,<%= @event_venue['City'] %>,<%= @event_venue['StateCode'] %>,<%= @event_venue['ZipCode']") %>
    </div>
  </div>

<!-- Buttons start here -->

<div class="row">
  <div class="small-12 columns">
    <%= link_to("Event Group Chat", event_group_messages_path(@event.id), method: :get, class: "large button custom expanded") %>     
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= link_to("Find Out Who's Going", event_users_path(@event.id), method: :post, class: "large button custom expanded") %>     
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= link_to("Buy Tickets!", @event_url, method: :post, class: "large button custom expanded") %>     
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= link_to("Venue Website", @event_venue['Url'], method: :post, class: "large button custom expanded") %>     
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= link_to("I Can't Go Anymore", unattend_path(params[:id]), method: :post, class: "large button custom expanded") %>    
  </div>
</div>
