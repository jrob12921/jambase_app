<div class="event_container">
  <div class="row">
    <h2>Congrats!</h2>
  </div>

  <div class="row">
    <h3>You're seeing:</h3>
    <ul>
      <% @artist_names.each do |a| %>
        <li><%= a %></li>
      <% end %>
    </ul>
  </div>


  <div class="row">
    On: <%= DateTime.parse(@event_date).strftime("%-m/%-d/%y") %></div>
  </div>

  <div class="row">
    At: <%= @event_venue['Name'] %>
      <ul>
        <li><%= @event_venue['Address'] %><br><%= @event_venue['City'] %>, <%= @event_venue['StateCode'] %> <%= @event_venue['ZipCode'] %></li>
      </ul>
  </div>
</div>

<!-- Buttons start here -->

<div class="row">
  <div class="gm_button_container">
    <%= link_to("Event Group Chat", event_group_messages_path(@event.id), method: :get, class: "large button custom expanded") %>     
  </div>
</div>

<div class="row">
  <div class="dm_button_container">
    <%= link_to("Find Out Who's Going", event_users_path(@event.id), method: :post, class: "large button custom expanded") %>     
  </div>
</div>

<div class="row">
  <div class="ticket_button_container">
    <%= link_to("Buy Tickets!", @event_url, method: :post, class: "large button custom expanded") %>     
  </div>
</div>

<div class="row">
  <div class="venue_button_container">
    <%= link_to("Venue Website", @event_venue['Url'], method: :post, class: "large button custom expanded") %>     
  </div>
</div>

<div class="row">
  <div class="attend_button_container">
    <%= link_to("I Can't Go Anymore", unattend_path(params[:id]), method: :post, class: "large button custom expanded") %>     
  </div>
</div>
